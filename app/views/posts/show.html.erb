

<h2><%= @post.title %></h2>

<% if @post.category_id.nil? %>
<h3>カテゴリ</h3>

  <p>カテゴリが登録されていません</p>

<% else %>

  <h3>カテゴリ：<%= @post.category_id %></h3>
  <p><%= @cat.name %></p>

<% end %>

<h3>Content</h3>

<p><%= @post.content %></p>

<h3>Comments</h3>
<ul>
	<% if @post.comments.any? %>
	<% @post.comments.each do |comment| %>
	<li id="comment_<%= comment.id %>">
	<%= comment.body %> (by <%= comment.commenter %>)
	<%= link_to 'delete', [comment.post, comment], :comfirm => 'Sure?',
	:method => :delete, :remote => true %>
	</li>
	<% end %>

	<% else %>
	<li>no comment yet.</li>
	<% end %>
</ul>

<h2>Add a comment</h2>


<%= form_for([@post, @comment]) do |f| %>

<% if @comment.errors.any? %>
<ul>
	<% @comment.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>
<% end %>


<div class="field">

	<%= f.label :commenter %>
	<%= f.text_field :commenter %>

</div>

<div class="field">

	<%= f.label :body %>
	<%= f.text_field :body %>

</div>

<div class="actions">
	<%= f.submit %>
</div>



<% end %>

<%= link_to 'home', posts_path %>


<script>
$(function() {

	$(document).on('ajax:success', 'a[data-method="delete"]', function(e, data, status, xhr) {
		$('#comment_'+data.comment.id).fadeOut("slow");
	});

});

</script>